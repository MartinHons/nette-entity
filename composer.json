{
    "name": "martinhons/nette-entity",
    "description": "Entity extension for Nette framework",
    "type": "extension",
    "keywords": ["nette", "entity", "database", "extension", "orm"],
    "license": "MIT",
    "authors": [
        {
            "name": "Martin Hons",
            "homepage": "https://github.com/MartinHons"
        }
    ],
    "require": {
        "php": ">=8.2",
        "nette/database": "^3.2",
        "nette/di": "^3.2",
        "nette/schema": "^1.3"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "martinhons/coding-standard": "^1.0",
        "nette/bootstrap": "^3.2",
        "phpunit/phpunit": "^12.4"
    },
    "autoload": {
        "psr-4": {
            "MartinHons\\NetteEntity\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
	"scripts": {
		"phpstan": "phpstan analyse",
        "cs": "phpcs --standard=HonsStandard src tests",
        "csf": "phpcbf --standard=HonsStandard src tests"
	},
    "minimum-stability": "stable",
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
